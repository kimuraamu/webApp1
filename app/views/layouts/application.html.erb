<!DOCTYPE html>
<html>
  <head>
    <title>Chatnoir</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-logo">
          <% if @current_user %>
             <%= link_to("Top", "/index") %> 
          <% else %>
            <%= link_to("Top", "/") %>
          <% end %>
      </div>
      <nav class="pc-nav">
        <ul class="header-menus">
          <% if @current_user %>
            <li>
            <%= link_to(@current_user.name,"/users/#{@current_user.id}") %>
            </li>
            <li>
              <%= link_to("Board","/index")%>
            </li>
            <li>
                <%= link_to("Logout","/logout",{method: :post}) %>
            </li>
          <% else %>   
            <li>
              <%= link_to("Login","/login")%>
            </li>
            <li>
              <%= link_to("Signup","/newuser")%>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>
    <% if flash[:notice]%>
      <div class="flash">
        <%= flash[:notice]%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
